<% if @form.errors.any? %>
  <div class="alert alert-error alert-danger">
    <button class="close" type="button" data-dismiss="alert">
      &times;
    </button>
    <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %>
      <% end %>
    </ul>
  </div>
<% end %>
        
<%= form_with(model: @form, url: users_log_in_path, local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.email_field :email, class: "form-control", required: true, placeholder: "xxx@sample.com", autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :password, "パスワード", class: "col-sm-3 col-form-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password, class: "form-control", required: true, placeholder: "xxxxxx", autocomplete: "current-password" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-offset-3.col-sm-3">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
